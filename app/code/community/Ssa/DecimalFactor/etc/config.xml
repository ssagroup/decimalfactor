<config>
    <modules>
        <Ssa_DecimalFactor>
            <version>1.0.0</version>
        </Ssa_DecimalFactor>
    </modules>
    <global>
        <models>
            <ssa_decimalfactor>
                <class>Ssa_DecimalFactor_Model</class>
                <resourceModel>ssa_decimalfactor_resource</resourceModel>
            </ssa_decimalfactor>
            <ssa_decimalfactor_resource>
                <class>Ssa_DecimalFactor_Model_Resource</class>
                <entities>
                    <factor>
                        <!--data storage table. Stores such data as order id and transform total value-->
                        <table>ssa_decimal_factor</table>
                    </factor>
                </entities>
            </ssa_decimalfactor_resource>
        </models>
        <resources>
            <ssa_decimalfactor_setup>
                <setup>
                    <module>Ssa_DecimalFactor</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
            </ssa_decimalfactor_setup>
        </resources>
        <helpers>
            <ssa_decimalfactor>
                <class>Ssa_DecimalFactor_Helper</class>
            </ssa_decimalfactor>
        </helpers>
        <events>
            <!--main event for detecting paid orders-->
            <sales_order_invoice_pay>
                <observers>
                    <ssa_sales_order_invoice_pay>
                        <class>ssa_decimalfactor/observer</class>
                        <method>addOrderTotalPaidData</method>
                    </ssa_sales_order_invoice_pay>
                </observers>
            </sales_order_invoice_pay>
        </events>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <ssa_decimalfactor>
                    <files>
                        <default>Ssa_DecimalFactor.csv</default>
                    </files>
                </ssa_decimalfactor>
            </modules>
        </translate>
        <layout>
            <updates>
                <ssa_decimalfactor>
                    <file>ssa/ssa_config.xml</file>
                </ssa_decimalfactor>
            </updates>
        </layout>
    </adminhtml>
    <default>
        <ssa_decimalfactor>
            <ssa_group>
                <is_active>1</is_active>
                <decimal_factor>1</decimal_factor>
                <upgrade_old_orders>0</upgrade_old_orders>
            </ssa_group>
        </ssa_decimalfactor>
    </default>
    <!--cron job run every 12 hours-->
    <crontab>
        <jobs>
            <ssa_decimalfactor_queue>
                <schedule>
                    <cron_expr>0 */12 * * *</cron_expr>
                </schedule>
                <run>
                    <model>ssa_decimalfactor/cron::upgradeExistOrders</model>
                </run>
            </ssa_decimalfactor_queue>
        </jobs>
    </crontab>
</config>